<section class="content-line">
  <div class="container">
    {{#section-title}}
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-8">
        {{> Molecules-section-title }}
      </div>
      <div class="hidden-xs col-sm-6 col-md-4">
        <form action="#">
          {{> Atoms-select }}
        </form>
      </div>
    </div>
    {{/section-title}}
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-8">
        <div class="row">
          {{#teasers}}
          <div class="col-xs-12 col-md-6 teaser-wraper">
            {{> Molecules-teaser-type-2 }}
          </div>
          {{/teasers}}
        </div>
        <div class="row pagination-row">
          <div class="col-xs-12">
            {{#pagination}} {{> Molecules-pagination }} {{/pagination}}
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        {{#promo-teasers}} {{> Molecules-promo-teaser }} {{/promo-teasers}}
      </div>
    </div>
  </div>
</section>